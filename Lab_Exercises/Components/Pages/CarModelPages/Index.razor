@page "/carmodels"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Lab_Exercises.Domain
@using Lab_Exercises.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Lab_Exercises.Data.Lab_ExercisesContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="carmodels/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.CarModel">
    <PropertyColumn Property="carmodel => carmodel.Name" />
    <PropertyColumn Property="carmodel => carmodel.CreatedDate" />
    <PropertyColumn Property="carmodel => carmodel.UpdatedDate" />
    <PropertyColumn Property="carmodel => carmodel.CreatedBy" />
    <PropertyColumn Property="carmodel => carmodel.UpdatedBy" />

    <TemplateColumn Context="carmodel">
        <a href="@($"carmodels/edit?id={carmodel.Id}")">Edit</a> |
        <a href="@($"carmodels/details?id={carmodel.Id}")">Details</a> |
        <a href="@($"carmodels/delete?id={carmodel.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Lab_ExercisesContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
