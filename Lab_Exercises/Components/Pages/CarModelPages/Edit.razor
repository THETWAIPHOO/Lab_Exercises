@page "/carmodels/edit"
@using Microsoft.EntityFrameworkCore
@using Lab_Exercises.Domain
@inject IDbContextFactory<Lab_Exercises.Data.Lab_ExercisesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>CarModel</h2>
<hr />
@if (CarModel is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="CarModel" OnValidSubmit="UpdateCarModel" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="CarModel.Id" value="@CarModel.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="CarModel.Name" class="form-control" />
                    <ValidationMessage For="() => CarModel.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createddate" class="form-label">CreatedDate:</label>
                    <InputDate id="createddate" @bind-Value="CarModel.CreatedDate" class="form-control" />
                    <ValidationMessage For="() => CarModel.CreatedDate" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updateddate" class="form-label">UpdatedDate:</label>
                    <InputDate id="updateddate" @bind-Value="CarModel.UpdatedDate" class="form-control" />
                    <ValidationMessage For="() => CarModel.UpdatedDate" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="CarModel.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => CarModel.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="CarModel.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => CarModel.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/carmodels">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private CarModel? CarModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        CarModel ??= await context.CarModel.FirstOrDefaultAsync(m => m.Id == Id);

        if (CarModel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCarModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(CarModel!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CarModelExists(CarModel!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/carmodels");
    }

    private bool CarModelExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.CarModel.Any(e => e.Id == id);
    }
}
