@page "/carmodels/create"
@using Microsoft.EntityFrameworkCore
@using Lab_Exercises.Domain
@inject IDbContextFactory<Lab_Exercises.Data.Lab_ExercisesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>CarModel</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="CarModel" OnValidSubmit="AddCarModel" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="CarModel.Name" class="form-control" /> 
                <ValidationMessage For="() => CarModel.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createddate" class="form-label">CreatedDate:</label> 
                <InputDate id="createddate" @bind-Value="CarModel.CreatedDate" class="form-control" /> 
                <ValidationMessage For="() => CarModel.CreatedDate" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updateddate" class="form-label">UpdatedDate:</label> 
                <InputDate id="updateddate" @bind-Value="CarModel.UpdatedDate" class="form-control" /> 
                <ValidationMessage For="() => CarModel.UpdatedDate" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="CarModel.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => CarModel.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="CarModel.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => CarModel.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/carmodels">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private CarModel CarModel { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddCarModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.CarModel.Add(CarModel);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/carmodels");
    }
}
