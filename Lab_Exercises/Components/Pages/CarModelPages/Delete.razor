@page "/carmodels/delete"
@using Microsoft.EntityFrameworkCore
@using Lab_Exercises.Domain
@inject IDbContextFactory<Lab_Exercises.Data.Lab_ExercisesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CarModel</h2>
    <hr />
    @if (carmodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@carmodel.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedDate</dt>
            <dd class="col-sm-10">@carmodel.CreatedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedDate</dt>
            <dd class="col-sm-10">@carmodel.UpdatedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@carmodel.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@carmodel.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="carmodel" OnValidSubmit="DeleteCarModel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(carmodel is null)">Delete</button> |
            <a href="/carmodels">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CarModel? carmodel;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        carmodel = await context.CarModel.FirstOrDefaultAsync(m => m.Id == Id);

        if (carmodel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCarModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.CarModel.Remove(carmodel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/carmodels");
    }
}
